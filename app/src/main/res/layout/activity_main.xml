<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/large_button_height"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="50dp">

        <com.zalack.android.ui.common.FontTextView
            android:id="@+id/activityMain_btn_Register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_button_height"
            android:layout_marginBottom="20dp"
            android:background="@drawable/green_round_rectangle_30"
            android:paddingTop="10dp"
            android:elevation="@dimen/elevation_4"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:text="@string/register" />

        <com.zalack.android.ui.common.FontTextView
            android:id="@+id/activityMain_btn_SignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_button_height"
            android:background="@drawable/green_round_rectangle_30"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:paddingBottom="10dp"
            android:elevation="@dimen/elevation_4"
            android:layout_marginBottom="@dimen/elevation_4"
            android:text="@string/sign_in" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>