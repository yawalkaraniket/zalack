<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_main_container"
    tools:context=".ui.activity.NavigationActivity">

    <com.zalack.android.ui.common.NavigationPager
        android:id="@+id/navigation_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_layout_container"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/navigation_layout_container" />

    <LinearLayout
        android:id="@+id/navigation_layout_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/projects_selection"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/projects_selection_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/projects_tab_icon"
                android:layout_margin="@dimen/elevation_4"/>
            <TextView
                android:id="@+id/projects_selection_text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/projects"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tasks_selection"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tasks_selection_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tasks_tab_icon"
                android:layout_margin="@dimen/elevation_4"/>
            <TextView
                android:id="@+id/tasks_selection_text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_selection"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_selection_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/profile_tab_icon"
                android:layout_margin="@dimen/elevation_4"/>
            <TextView
                android:id="@+id/profile_selection_text"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>