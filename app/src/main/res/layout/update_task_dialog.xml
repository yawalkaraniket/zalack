<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/edit_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/button_text_size">

            <com.zalack.android.ui.common.FontEditText
                android:id="@+id/task_name_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:inputType="none"
                android:minLines="2"
                android:text="Task Name" />

            <com.zalack.android.ui.common.FontEditText
                android:id="@+id/task_description_edit"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:inputType="none"
                android:minLines="2"
                android:text="Task Description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_text_size"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_text_size"
                    android:text="@string/submit" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>